{
  "extends": "@tsconfig/node20/tsconfig.json",
  "exclude": ["src/**/__tests__/*"],
  "include": [
    "vite.config.*",
    "vitest.config.*",
    "cypress.config.*",
    "nightwatch.conf.*",
    "playwright.config.*"
  ],
  "compilerOptions": {
    "esModuleInterop": true,
    "composite": true,
    "noEmit": true,
    "module": "ESNext",
    "verbatimModuleSyntax": false,
    "moduleResolution": "Bundler",
    "types": ["node"]
  }
}
